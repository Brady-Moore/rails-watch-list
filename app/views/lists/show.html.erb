<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h3 m-0"><%= @list.name %></h1>
  <div>
    <%= link_to "All lists", lists_path, class: "btn btn-outline-secondary btn-sm" %>
    <%= link_to "Add movie", new_list_bookmark_path(@list), class: "btn btn-success btn-sm" %>
  </div>
</div>
<% if @bookmarks.any? %>
  <div class="row gy-3">
    <% @bookmarks.each do |bm| %>
      <% next unless bm.movie %>
      <div class="col-md-4 mb-3">
        <div class="card h-100">
          <%= image_tag bm.movie.poster_url, class: "card-img-top", alt: bm.movie.title if bm.movie.poster_url.present? %>
          <div class="card-body">
            <h5 class="card-title"><%= bm.movie.title %> (<%= bm.movie.rating %>)</h5>
            <p class="card-text"><%= bm.movie.overview %></p>
            <p><strong>Note:</strong> <%= bm.comment %></p>
          </div>
          <div class="card-footer bg-white">
            <%= link_to "Remove", bookmark_path(bm), data: { turbo_method: :delete, turbo_confirm: "Remove?" }, class: "btn btn-outline-danger btn-sm" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="text-center py-5 text-muted">No movies yet. Add one!</div>
<% end %>
