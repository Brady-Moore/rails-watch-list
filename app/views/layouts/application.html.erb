<!DOCTYPE html>
<html>
  <head>
    <title>WatchList</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>
  <body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <%= link_to "WatchList", root_path, class: "navbar-brand fw-bold" %>
        <div class="ms-auto">
          <%= link_to "New List", new_list_path, class: "btn btn-outline-light btn-sm" %>
        </div>
      </div>
    </nav>
    <div class="container my-4">
      <% flash.each do |k,v| %>
        <div class="alert alert-<%= k == "notice" ? "success" : "danger" %>"><%= v %></div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
