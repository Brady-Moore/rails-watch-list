<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h3 m-0">My Lists</h1>
  <%= link_to "New List", new_list_path, class: "btn btn-primary" %>
</div>
<% if @lists.any? %>
  <div class="row gy-3">
    <% @lists.each do |list| %>
      <div class="col-12 col-sm-6 col-lg-4">
        <div class="card shadow-sm h-100">
          <div class="card-body">
            <h5 class="card-title"><%= link_to list.name, list, class: "stretched-link text-decoration-none" %></h5>
            <p class="text-muted mb-0"><%= pluralize(list.movies.count, "movie") %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="text-center py-5 text-muted">No lists yet. Create your first one!</div>
<% end %>
